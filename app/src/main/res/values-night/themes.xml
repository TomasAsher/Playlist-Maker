<resources>

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorPrimaryVariant">@color/yp_black</item>
        <item name="colorOnPrimary">@color/yp_black</item>

        <item name="colorSecondary">@color/yp_black</item>
        <item name="colorSecondaryVariant">@color/yp_black</item>
        <item name="colorOnSecondary">@color/yp_white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CustomSwitch" parent="TextActivitySettings">
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/yp_white</item>
        <item name="android:textColorHint">@color/yp_black</item>
    </style>
</resources>