<resources>

    <style name="Base.Theme.PlaylistMaker.StatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.ActivityMain" parent="Base.Theme.PlaylistMaker.StatusBar">
        <item name="android:background">@color/activityMainBackground</item>
    </style>

    <style name="Base.Theme.PlaylistMaker.ActivitySecondary" parent="Base.Theme.PlaylistMaker.StatusBar">
        <item name="android:background">@color/activitySecondaryBackground</item>
    </style>

    <style name="CustomSwitch" parent="TextActivitySettings">
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/yp_light_gray</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
    </style>

    <style name="TabTextApperance" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="itemIconTint">@color/nav_icon_selector</item>
        <item name="itemTextColor">@color/nav_text_selector</item>
        <item name="itemBackground">@color/yp_white</item>
    </style>

</resources>